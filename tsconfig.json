{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "lib": [
      "ES5",
      "ES6"
    ],
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "./ecosystem.config.js",
  ]
}